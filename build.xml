<?xml version="1.0" encoding="UTF-8"?>

<project name="GIMS" default="build">

    <!-- Install all PHP dependencies via composer -->
    <target name="composer-install">
        <composer command="install">
            <arg value="--dev" />
            <arg value="--prefer-source" />
        </composer>
    </target>
    
    <!-- ============================================  -->
    <!-- Target: build                                 -->
    <!-- ============================================  -->
    <target name="build" depends="composer-install" description="build all assets for a fully functionnal application (DB, CSS, JS)">
        <exec command="./bin/build.sh" checkreturn="true" logoutput="/dev/stdout" />
    </target>

    <!-- ============================================  -->
    <!-- (DEFAULT)  Target: dist                       -->
    <!-- ============================================  -->
    <target name="clean">
        <echo msg="Clean..." />
        <delete dir=".sass-cache/" includeemptydirs="true" verbose="true" />
        <delete dir="htdocs/css/" includeemptydirs="true" verbose="true" />
        <delete dir="htdocs/js/min/" includeemptydirs="true" verbose="true" />
    </target>
    
    <target name="test" depends="validate-schema,phpunit,testacular-unit,testacular-e2e" description="run all tests available">
        <echo msg="Testing done" />
    </target>
    
    <target name="validate-schema" depends="build">
        <echo msg="Validating schema..." />
        <exec command="./vendor/bin/doctrine-module orm:validate-schema" checkreturn="true" logoutput="/dev/stdout" />
    </target>
    
    <target name="phpunit" depends="build">
        <echo msg="Testing phpunit..." />
        <exec command="cd module/Application/test/ ; ../../../vendor/bin/phpunit" checkreturn="true" logoutput="/dev/stdout" />
    </target>
    
    <target name="testacular-unit" depends="build">
        <echo msg="Testing testacular-unit..." />
        <exec command="testacular start --no-auto-watch --single-run --browsers PhantomJS,Firefox config/testacular-unit.conf.js" checkreturn="true" logoutput="/dev/stdout" />
    </target>
    
    <target name="testacular-e2e" depends="build">
        <echo msg="Testing testacular-e2e..." />
        <exec command="testacular start --no-auto-watch --single-run --browsers PhantomJS,Firefox config/testacular-e2e.conf.js" checkreturn="true" logoutput="/dev/stdout" />
    </target>
</project>

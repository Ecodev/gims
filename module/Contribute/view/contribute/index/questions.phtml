
    <i>[here go all the parent chapter name and description (if there are any)]</i><br/>

    <h4>{{currentQuestion.name}}</h4>
    <p>{{currentQuestion.description}}</p>


    <div ng-switch="currentQuestion.type">

        <div ng-switch-when="Chapter">
            <div ng-repeat='child in currentQuestionChildren'>
                Question {{child.id}} - {{child.name}}
            </div>
        </div>









        <div ng-switch-when="Numeric" class='row-fluid'>
            <div class='span1' ng-repeat='part in currentQuestion.parts'>
                <label for='numerical-{{currentQuestion.id}}-{{part.id}}'>
                    {{part.name}}<br/>
                    <input class='span12' type='number' name='numerical-{{currentQuestion.id}}-{{part.id}}' id='numerical-{{currentQuestion.id}}-{{part.id}}'/>
                </label>
            </div>
        </div>








        <div ng-switch-when="Text">
            <div class='span1' ng-repeat='part in currentQuestion.parts'>
                <label for='numerical-{{currentQuestion.id}}-{{part.id}}'>
                    {{part.name}}<br/>
                    <input class='span12' type='text' name='numerical-{{currentQuestion.id}}-{{part.id}}' id='numerical-{{currentQuestion.id}}-{{part.id}}'/>
                </label>
            </div>
        </div>





        <div ng-switch-when="Choice">


            <div class='row-fluid' ng-repeat='choice in currentQuestion.choices'>
                <div class='span1 text-center' ng-repeat='part in currentQuestion.parts'>
                    <input type='radio' name='{{part}}-{{currentQuestion.id}}'/>
                </div>
                <span class='span9'>
                    {{choice.label}}
                </span>
            </div>

            <div class='row-fluid'>
                <div class='span1 text-center' ng-repeat='part in currentQuestion.parts'>
                    {{part.name}}
                </div>
                <div class='span9'></div>
            </div>


        </div>

    </div>



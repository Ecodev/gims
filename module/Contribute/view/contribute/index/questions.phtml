
<div class='row-fluid'>

    <div class='span2'>
        <div class="btn-group">
            <button class="btn" ng-click='goToPrevious();'>Previous</button>
            <button class="btn" ng-click='goToNext();'>Next</button>
        </div>
        <form class="navbar navbar-form ">
            <input type="text" class='span5' ng-model="wantedId">
            <button type="submit" class="btn" ng-click="goTo()">Go to</button>
        </form>
    </div>

    <div class='span10'>

<h4>{{currentQuestion.name}}</h4>
<p>{{currentQuestion.description}}</p>


<div ng-switch="currentQuestion.type">

    <div ng-switch-when="Chapter">
        <div ng-repeat='child in currentQuestionChildren'>
            <h5>{{child.name}}</h5>

            <div class='row-fluid'>
                <div ng-switch="child.type" >
                    <div ng-switch-when="Chapter">subchapter</div>
                    <div ng-switch-when="Numeric">
                        <gims-num-question question='child'></gims-num-question>
                    </div>
                    <div ng-switch-when="Text">
                        <gims-text-question question='child'></gims-text-question>
                    </div>
                    <div ng-switch-when="Choice">
                        <gims-choice-question question='child'></gims-choice-question>
                    </div>
                </div>
            </div>

        </div>
    </div>


    <div ng-switch-when="Numeric" class='row-fluid'>
        <gims-num-question question='currentQuestion'></gims-num-question>
    </div>

    <div ng-switch-when="Text">
        <gims-text-question question='currentQuestion'></gims-text-question>
    </div>

    <div ng-switch-when="Choice">
        <gims-choi-question question='currentQuestion'></gims-choi-question>
    </div>

</div>



    </div>

</div>
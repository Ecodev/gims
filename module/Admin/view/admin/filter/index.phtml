<div class="container">

    <h2>
        <ul class="breadcrumb">
            <li class="active"><a href="/admin/filter">Filter</a></li>
        </ul>
    </h2>

    <div class="row">
        <div class="col-md-9">
            <gims-select    name='parents'
                            api="filter"
                            queryparams="params"
                            model="selectedFilter"
                            placeholder="Select a filter"
                            container-css-class='select2list'
                            custom-result-template="{{select2Template}}"
                            style="width: 100%"
                            >
            </gims-select>
        </div>
        <div class="col-md-3 show-grid text-right" >
            <gims-link-new target="filter"></gims-link-new>
        </div>
    </div>

    <div ng-grid="gridOptions" class="gridStyle"></div>

</div> <!-- /container -->

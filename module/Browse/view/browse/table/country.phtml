<div class="container">
    <form>
        <div class="row">
            <span class="span6">
                <p><gims-select api="country" model="country" placeholder="<?php echo $this->translate('Select a country') ?>" format="name" style="width:100%;" multiple="multiple"/></p>
            </span>
        </div>
        <div class="row">
            <span class="span6">
                <p><gims-select api="filterSet" model="filterSet" placeholder="<?php echo $this->translate('Select a filter set') ?>" style="width:100%;"/></p>
            </span>
        </div>
        <div class="row">
            <span class='span6'>

                <p>
                    <i class=" icon-question-sign" style='float:left;margin-top:5px'
                       popover="You can chain multiple years requests by commas. If separated by a dash, all years contained in the range will be selected. E.g : 1980,1990-2000,2005-2010,2013,2015"
                       popover-title="Explication"
                       popover-trigger="mouseenter"
                       popover-placement="right"

                        ></i>
                    <label class='span5'><?php echo $this->translate('Enter year(s)') ?></label>

                </p>
            </span>
        </div>
        <div class="row">
            <p class='span6'>
                <input class='span6' ng-model="years" ng-blur='updateUrl()' placeholder="E.g : 1980,1990-2000,2005-2010,2013,2015" />
            </p>
        </div>

        <div>
            <button class="btn" ng-class="{disabled: !country || !filterSet.id || !years}" ng-click="displayTable()"><i class="icon-refresh"></i> Generate table</button>
            <a href="{{exportUrl}}" target="_blank" class="btn" ng-class="{disabled: !exportUrl}"><i class="icon-download-alt"></i> Export</a>
            <span><i class="icon-loading" ng-show="isLoading"></i></span>
        </div>
    </form>

    <div class="alert alert-info" ng-hide="columnDefs"><i class="icon-info-sign"></i> <?php echo $this->translate('Select parameters to show table here.') ?></div>
    <div ng-grid="gridOptions" class="gridStyle" ng-show="columnDefs"></div>
</div>

                            <td  colspan="{{data.questionnaires.length + 1}}">
                                <a class="btn btn-default btn-sm"
                                   ng-click="addEquipment();"
                                   ng-class="{'disabled': getFiltersByLevel(0).length != 1}">
                                    <i class="fa fa-gims-add"></i> Add new facility

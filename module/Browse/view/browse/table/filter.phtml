<!--                                    <input  type='number' ng-disabled='!questionnaire.year || !filter' min='0' name='value' ng-model='values[filter.id][selection.part.id][question.name][$index]'/>-->
<!--                                </ng-form>-->
<!--                            </td>-->
<!--                        </tr>-->

                    </tbody>
                </table>

            </form>
        </div>
    </div>
</div>